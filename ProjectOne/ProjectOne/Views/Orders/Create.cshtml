@model ProjectOne.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <strong>Success!</strong> Order is ready! You have @TempData["OrderSize"] items pending. To place order select "Place order"<br />
        You can look around the site and return if you like, otherwise add another order.
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}
else if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <strong>Error!</strong> @TempData["error"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" onsubmit="window.location.reload();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreID" class="control-label"></label>
                <input asp-for="StoreID" class="form-control" />
                <span asp-validation-for="StoreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
                <input asp-for="CustomerID" class="form-control" />
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellTime" class="control-label"></label>
                <input asp-for="SellTime" class="form-control" />
                <span asp-validation-for="SellTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoldItems" class="control-label"></label>
                <input asp-for="SoldItems" class="form-control" />
                <span asp-validation-for="SoldItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add to order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="addOrders">Place order</a>
</div>
<div>
    <a asp-action="Index">Go Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
